<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"> <!-- 3 from th left and col 6 -->
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="contactNameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="contactNameTextField"
                    placeholder="Enter the Contact Name"
                    name="contactName" 
                    value="<%= contact.contactName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="phoneNumberTextField">Phone Number</label>
                    <input type="number" class="form-control"
                    id="phoneNumberTextField"
                    placeholder="Enter the Phone Number"
                    name="phoneNumber"
                    value="<%= contact.phoneNumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="addressTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="addressTextField"
                    placeholder="Enter Email Address"
                    name="emailAddress"
                    value="<%= contact.emailAddress %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
                    
                    <a href = "/contact-list/delete/<%= contact._id %>" type="button" class="btn btn-danger">Delete</a>
                    
                    </form>
                </div>
        
            </div>
        </div>
        








<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>